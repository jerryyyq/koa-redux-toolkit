{
    "parser"  : "babel-eslint",
    "extends" : [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "env"     : {
        "browser" : true
    },
    "globals" : {
        "__DEV__"      : false,
        "__PROD__"     : false,
        "__DEBUG__"    : false,
        "__COVERAGE__" : false,
        "__BASENAME__" : false
    },
    "rules": {
        "semi" : [2, "never"],
        "max-len": [2, 200, 2],
        "generator-star-spacing": 0,
        "babel/generator-star-spacing": 1,
        "jsx-quotes": [2, "prefer-single"],
        "key-spacing": ["off", { "beforeColon": true, "afterColon": true }],
        "indent": ["error", 4],
        "brace-style": ["off", "allman"],
        "camelcase": "off",
        "eqeqeq": ["warn", "smart"],
        "curly": ["error", "multi-or-nest"],
        "yoda": ["error", "always"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
